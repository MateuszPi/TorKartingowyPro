<Window x:Class="TorKartingowy.WindowKasa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TorKartingowy"
        mc:Ignorable="d"
        Title="WindowKasa" Height="332" Width="300">
    <Grid Width="290" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="101*"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonWydaj" Content="Wydaj bilet" Click="button_Wydaj" Margin="0,0,-2,0"/>
        <Button x:Name="buttonKasuj" Content="Skasuj Bilet" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="button_Kasuj" Margin="0,0,-2,0" Grid.Row="2"/>
        <Button x:Name="buttonRezerwacja" Content="Rezerwacja" Click="button_Rezerwacja" Margin="0,0,-2,0" Grid.Row="1"/>
    </Grid>
</Window>
