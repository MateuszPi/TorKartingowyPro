<Page x:Class="TorKartingowy.PageRekordy"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TorKartingowy"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageRekordy">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"><Run Text="Layout"/><LineBreak/><Run/></TextBlock>
        <ComboBox Name="ComboLayout" HorizontalAlignment="Left" Height="25" Margin="130,0,0,0" VerticalAlignment="Top" Width="170"/>
        <TextBlock Name="ComboKlasa" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Margin="0,25,0,0" Text="Klasa"/>
        <ComboBox HorizontalAlignment="Left" Height="25" Margin="130,25,0,0" VerticalAlignment="Top" Width="170"/>
        <ListView HorizontalAlignment="Left" Height="250" Margin="0,50,0,0" VerticalAlignment="Top" Width="300">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
